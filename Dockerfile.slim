FROM adoptopenjdk/openjdk8:alpine-slim

COPY install-sbt.sh /tmp

WORKDIR /var/build

ARG SBT_VERSION=1.4.2

RUN \
  apk add --no-cache --virtual .deps curl && \
  apk add --no-cache bash && \
  /tmp/install-sbt.sh ${SBT_VERSION} && \
  rm -f /tmp/install-sbt.sh && \
  apk del --purge .deps && \
  rm -rf /var/cache/apk/* && \
  sbt sbtVersion

CMD sbt
